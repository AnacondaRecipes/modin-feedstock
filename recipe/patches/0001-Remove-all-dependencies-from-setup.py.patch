From ea9bf722f0ad98a67782335b887494766f360d58 Mon Sep 17 00:00:00 2001
From: Vasilij Litvinov <vasilij.n.litvinov@intel.com>
Date: Thu, 25 Nov 2021 23:25:00 +0300
Subject: [PATCH] Remove all dependencies from setup.py

Dependencies should be handled by meta.yaml

Signed-off-by: Vasilij Litvinov <vasilij.n.litvinov@intel.com>
---
 requirements/env_omnisci.yml |  4 ++--
 setup.py                     | 12 ++++++------
 2 files changed, 8 insertions(+), 8 deletions(-)

diff --git a/requirements/env_omnisci.yml b/requirements/env_omnisci.yml
index 9bb3b13c..cdc5d3c4 100644
--- a/requirements/env_omnisci.yml
+++ b/requirements/env_omnisci.yml
@@ -3,7 +3,7 @@ channels:
   - conda-forge
 dependencies:
   - pandas==1.3.4
-  - pyarrow==5.0.0
+    #  - pyarrow==5.0.0 # to be handled by meta.yaml
   - libthrift
   - numpy>=1.16.5
   - fsspec
@@ -13,7 +13,7 @@ dependencies:
   - pytest-xdist>=2.1.0
   - coverage<5.0
   - pygithub==1.53
-  - pyomniscidbe<=5.8
+    #  - pyomniscidbe<=5.8 # to be handled my meta.yaml
   - s3fs>=2021.8
   - psutil
   - openpyxl
diff --git a/setup.py b/setup.py
index b1f2d3f5..88084378 100644
--- a/setup.py
+++ b/setup.py
@@ -4,11 +4,11 @@ import versioneer
 with open("README.md", "r", encoding="utf-8") as fh:
     long_description = fh.read()
 
-dask_deps = ["dask>=2.22.0", "distributed>=2.22.0"]
-ray_deps = ["ray[default]>=1.4.0", "pyarrow>=1.0"]
-remote_deps = ["rpyc==4.1.5", "cloudpickle", "boto3"]
-spreadsheet_deps = ["modin-spreadsheet>=0.1.0"]
-sql_deps = ["dfsql>=0.4.2", "pyparsing<=2.4.7"]
+dask_deps = []
+ray_deps = []
+remote_deps = []
+spreadsheet_deps = []
+sql_deps = []
 all_deps = dask_deps + ray_deps + remote_deps + spreadsheet_deps
 
 setup(
@@ -22,7 +22,7 @@ setup(
     url="https://github.com/modin-project/modin",
     long_description=long_description,
     long_description_content_type="text/markdown",
-    install_requires=["pandas==1.3.4", "packaging", "numpy>=1.16.5", "fsspec"],
+    install_requires=[],
     extras_require={
         # can be installed by pip install modin[dask]
         "dask": dask_deps,
